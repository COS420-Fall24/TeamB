{
  "compilerOptions": {
    "target": "es6",  // or "esnext" for modern JavaScript support
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Use "react" if using React 16 or earlier
    "outDir": "./dist"
  },
  "include": ["src/**/*", "tests/**/*"],  // Include your test files as well
  "exclude": ["node_modules"]
}
